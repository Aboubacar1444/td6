{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'layout.html.twig' %}
{% block titre %}Administration - Ajout Pizza{% endblock %}
{% block content %} 
    <div class="row center-block ">
        <div class="col-lg-12 text-center">
            <legend>Gestion des pizzas - Ajout</legend>
        </div>
        <div class="col-xs-5 col-md-offset-3">
            {{form_start(form)}}
                {{form_errors(form)}}
                {{form_row(form.nom, {'attr':{'placeholder':'Désignation de la pizza'}} )}}
                {{form_row(form.ingredients, {'attr':{'placeholder':'Désignation des ingredients de la pizza'}} )}}
                {{form_row(form.description, {'attr':{'placeholder':'Description de la pizza'}} )}}
                {{form_row(form.prix, {'attr':{'placeholder':'Entrez le prix de la pizza'}} )}}
                {{form_row(form.save,{'attr':{'class':'btn-primary btn-md btn-block'}}   )}}
            {{form_end(form)}}
        </div>
    </div>
    
{% endblock %}