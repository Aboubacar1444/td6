{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'layout.html.twig' %}

{% block content %} 
    <div class="row center-block form-group">
        <div class="col-lg-12 text-center">
            <legend>Gestion des ingredients d'une pizza - Rélation</legend>
        </div>
        <div class="row col-xs-5 col-md-offset-3">
            {{form_start(form)}}
                {{form_errors(form)}}
                {{form_row(form.pizza, {'attr':{'placeholder':'Désignation de l\'ingredient'}} )}}
                {{form_row(form.ingredients, {'attr':{'placeholder':'Désignation de l\'ingredient'}} )}}
                {{form_row(form.save,{'attr':{'class':'btn btn-primary btn-md btn-block'}}   )}}
            {{form_end(form)}}
        </div>
    </div>
    
{% endblock %}